<div class="container shadow p-5 w-50" style="margin-bottom:262px !important;">
  <h2 class="text-center">Iniciar Sesi√≥n</h2>
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email" } %>
      <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: "current-password" } %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Ingresar", class:"btn btn-outline-primary mt-3" %>
      <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
        <%= link_to "Sign up", new_registration_path(resource_name), class:"btn btn-outline-primary mt-3" %><br />
      <% end %>
    </div>

  <% end %>

  <%= render "devise/shared/links" %>
</div>
