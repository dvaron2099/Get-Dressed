<div class="container">
<div class="container mt-3 p-3">
  <h2><strong>Tus prendas alquiladas:</strong></h2>
</div>

<div class="container">
  <% current_user.rents.each do |rent| %>
    <div class="card shadow mb-3 p-3" style="width: 35rem;">
      <div class="row">
        <div class="col-4">
          <%= image_tag rent.clothe.photos.first, class: "card-img-top img-fluid", style: "height: 200px; width: 250px; object-fit: cover;", crop: :fill %>
        </div>
        <div class="col-8">
          <h5 class="card-title"><strong><%= rent.clothe.name %></strong></h5>
          <ul>
            <li class="card-text">Fecha de inicio: <%= rent.pickup_date %> </li>
            <li class="card-text">Fecha de devolución: <%= rent.return_date %> </li>
            <li class="card-text">Status: <%= rent.status == true ? "Alquiler aprobado" : "Pendiente de aprobación" %></li>
          </ul>
        </div>
      </div>
    </div>
  <% end %>
</div>
</div>
